# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:9000
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Connection String
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:9001/postgres"

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000

# S3 Storage Configuration
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=local

# Encryption Key for sensitive data (API keys, tokens stored in database)
# IMPORTANT: Use a strong, unique key in production!
# Generate with: openssl rand -base64 32
# This key is used to encrypt/decrypt integration secrets (Resend API key, WhatsApp tokens)
# If you change this key, all encrypted data will become unreadable
ENCRYPTION_KEY=your-32-character-or-longer-secret-key
